
@model Assignment3.Models.Teacher

@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId" style="float: left; margin:0 auto; ">Cancel</a>
    </nav>
    <br />
    <h2 style=" color:darkred;" ;>Are you sure you want to delete @Model.TeacherFname @Model.TeacherLname?</h2>

    <p>This action cannot be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.TeacherId">
        <button class="delbutton" style="display:block; color: #fff; background:#dd1111; margin: 0 auto; border:2px solid #000; border-radius: 3px;">
            Confirm Delete
        </button>
    </form>

</div>


